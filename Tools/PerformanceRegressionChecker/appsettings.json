{
  "PerformanceGates": {
    "FrameTime": {
      "MaxAverageTime": 16.67,
      "MaxVariance": 2.0,
      "MaxFrameTime": 20.0,
      "MinFPS": 59.0
    },
    "Memory": {
      "MaxMemoryGrowthPercent": 15.0,
      "MaxGCCollectionsGen0": 10,
      "MaxGCCollectionsGen1": 5,
      "MaxMemoryLeakBytes": 0,
      "MaxAllocationPerFrame": 1048576
    },
    "Audio": {
      "MaxLatencyMs": 10.0,
      "MaxAudioLatencyMs": 5.0,
      "MinSampleRate": 44100,
      "MaxBufferSize": 2048
    },
    "NodeEvaluation": {
      "MaxEvaluationTimeMs": 2.0,
      "MaxGraphNodes": 5000,
      "MaxEvaluationVariance": 1.0
    },
    "Graphics": {
      "MaxTextureUploadTimeMs": 5.0,
      "MaxBufferCreationTimeMs": 1.0,
      "MaxDrawCallBatchTimeMs": 0.5,
      "MinShaderCompileTimeMs": 0.1
    }
  },
  "RegressionDetection": {
    "DefaultThreshold": 10.0,
    "CriticalThreshold": 25.0,
    "HighThreshold": 15.0,
    "MediumThreshold": 10.0,
    "LowThreshold": 5.0,
    "MinSampleSize": 10,
    "ConfidenceLevel": 0.95,
    "StatisticalSignificance": 0.05
  },
  "Alerts": {
    "NotificationChannels": [
      {
        "Type": "slack",
        "WebhookUrl": "",
        "Channel": "#performance",
        "Enabled": false
      },
      {
        "Type": "email",
        "Recipients": [
          "tixl-performance@team.com"
        ],
        "Enabled": true
      },
      {
        "Type": "github",
        "Repository": "tixl3d/tixl",
        "Labels": [
          "performance",
          "regression",
          "automated"
        ],
        "Enabled": true
      }
    ],
    "AlertThresholds": {
      "CriticalRegressionPercentage": 50.0,
      "HighRegressionPercentage": 25.0,
      "MediumRegressionPercentage": 15.0,
      "LowRegressionPercentage": 10.0
    },
    "AlertCooldownMinutes": 30,
    "MaxAlertsPerHour": 10
  },
  "Reporting": {
    "DailyReport": {
      "Enabled": true,
      "Time": "09:00",
      "Recipients": [
        "tixl-team@company.com"
      ],
      "IncludeTrends": true,
      "IncludeRecommendations": true
    },
    "TrendAnalysis": {
      "AnalysisPeriodDays": 30,
      "UpdateInterval": "daily",
      "TrendThreshold": 5.0
    },
    "Dashboard": {
      "Enabled": true,
      "Port": 8080,
      "UpdateInterval": 5000,
      "RetentionPeriodDays": 90
    }
  },
  "DataStorage": {
    "ConnectionStrings": {
      "PerformanceDatabase": ""
    },
    "FileStorage": {
      "BasePath": "PerformanceData",
      "BackupEnabled": true,
      "BackupInterval": "daily",
      "RetentionPeriodDays": 365
    },
    "Cleanup": {
      "Enabled": true,
      "CleanupInterval": "weekly",
      "OldDataRetentionDays": 90
    }
  },
  "Benchmarking": {
    "Execution": {
      "WarmupIterations": 3,
      "MeasurementIterations": 10,
      "JobLaunchCount": 3,
      "MemoryDiagnosticLevel": "None",
      "ThreadingDiagnostic": false
    },
    "Filtering": {
      "IncludeCategories": [
        "*"
      ],
      "ExcludeCategories": [
        "*LongRun*"
      ]
    },
    "Environment": {
      "ProcessPriority": "High",
      "GCAllowVeryLargeObjects": false,
      "TieredPGO": true,
      "OptimizationsDisabled": false
    }
  },
  "CI": {
    "Gates": {
      "Enabled": true,
      "FailOnCriticalRegressions": true,
      "FailOnHighRegressions": false,
      "FailOnMediumRegressions": false,
      "BlockMerges": true
    },
    "Artifacts": {
      "UploadResults": true,
      "ResultsPath": "BenchmarkDotNet.Artifacts/results",
      "ReportsPath": "PerformanceReports"
    },
    "Notifications": {
      "Enabled": true,
      "CreateGitHubIssues": true,
      "SlackNotifications": true,
      "EmailNotifications": true
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "TiXL.PerformanceRegressionChecker": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    },
    "FileLogging": {
      "Enabled": true,
      "Path": "logs/performance-regression-{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss"
    }
  },
  "Security": {
    "API": {
      "EnableAuthentication": false,
      "AllowedOrigins": [
        "http://localhost:3000",
        "https://tixl-dashboard.company.com"
      ]
    },
    "Data": {
      "EncryptSensitiveData": false,
      "MaskPersonalData": true
    }
  },
  "FeatureFlags": {
    "EnableTrendAnalysis": true,
    "EnableAnomalyDetection": true,
    "EnablePredictiveAnalysis": false,
    "EnableAIBasedDetection": false,
    "EnableRealTimeMonitoring": true
  }
}
    <!-- Graphics programming specific rules -->
    <BooleanProperty Name="AllowUseOfGraphicsMemory">False</BooleanProperty>
    <BooleanProperty Name="RequireExceptionHandlingForGraphicsOperations">True</BooleanProperty>
    <BooleanProperty Name="RequireAsyncSuffixForAsyncGraphicsOperations">True</BooleanProperty>
    <BooleanProperty Name="RequireDisposalPatternForGraphicsResources">True</BooleanProperty>
    
    <!-- Performance specific rules -->
    <BooleanProperty Name="RequireValueTypeUsage">True</BooleanProperty>
    <BooleanProperty Name="RequireSpanAndReadOnlySpanUsage">True</BooleanProperty>
    <BooleanProperty Name="RequireMemoryTUsage">True</BooleanProperty>
    
    <!-- Security specific rules -->
    <BooleanProperty Name="RequireSecureRandomNumberGeneration">True</BooleanProperty>
    <BooleanProperty Name="DisallowHardcodedPasswords">True</BooleanProperty>
    <BooleanProperty Name="RequireInputValidation">True</BooleanProperty>
  </CustomRules>
</StyleCopSettings>

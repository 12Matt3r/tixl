# TiXL Code Coverage Thresholds Configuration
# This file defines minimum coverage requirements for different modules

[Core]
MinimumLineCoverage = 80
MinimumBranchCoverage = 75
MinimumMethodCoverage = 85

[Operators]
MinimumLineCoverage = 75
MinimumBranchCoverage = 70
MinimumMethodCoverage = 80

[Gfx]
MinimumLineCoverage = 70
MinimumBranchCoverage = 65
MinimumMethodCoverage = 75

[Gui]
MinimumLineCoverage = 65
MinimumBranchCoverage = 60
MinimumMethodCoverage = 70

[Editor]
MinimumLineCoverage = 70
MinimumBranchCoverage = 65
MinimumMethodCoverage = 75

[Resources]
MinimumLineCoverage = 85
MinimumBranchCoverage = 80
MinimumMethodCoverage = 90

# Global minimum requirements
[Global]
MinimumLineCoverage = 75
MinimumBranchCoverage = 70
MinimumMethodCoverage = 80
AllowCoverageRegression = false
MinimumTestsPerModule = 5

# Configuration for coverage collection
[CoverageCollection]
ExcludeByFile = **/*Test*.cs,**/*Mock*.cs,**/*Benchmark*.cs,**/*Fixtures*.cs,**/*Examples*.cs,**/*Designer*.cs,**/*.g.cs
ExcludeByAttribute = [GeneratedCode],[DebuggerDisplay],[Serializable]
IncludeTestAssembly = false
UseSourceLink = false
SingleHit = false
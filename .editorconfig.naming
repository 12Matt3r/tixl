dotnet_diagnostic.TiXL012001.severity = error
dotnet_diagnostic.TiXL012002.severity = warning
dotnet_diagnostic.TiXL012003.severity = error
dotnet_diagnostic.TiXL012004.severity = warning
dotnet_diagnostic.TiXL012005.severity = warning
dotnet_diagnostic.TiXL012006.severity = error
dotnet_diagnostic.TiXL012007.severity = warning
dotnet_diagnostic.TiXL012008.severity = warning
dotnet_diagnostic.TiXL012009.severity = error
dotnet_diagnostic.TiXL012010.severity = info